<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context=".NoticeActivity">


        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/titletext" android:textColor="#000000"/>
        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:id="@+id/addcard"
                app:cardCornerRadius="8dp" app:cardBackgroundColor="#3F51B5">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_margin="5dp"
                    android:background="#FFFFFF"
                    android:minLines="7"
                    android:scrollbars="vertical"
                    android:gravity="top"
                    android:id="@+id/contenttext"
                    android:textColor="#000000"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content">


            <TextView android:layout_width="0dp"
                      android:text="日志类型"
                      android:layout_margin="10dp"
                      android:layout_weight="4"
                      android:layout_height="wrap_content" android:textColor="#000000"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:id="@+id/typename"
                    android:layout_weight="3" android:textColor="#000000"/>

        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content">

            <TextView android:layout_width="wrap_content"
                      android:text="开始时间"
                      android:layout_margin="10dp"
                      android:layout_weight="2"
                      android:layout_height="wrap_content" android:textColor="#000000"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:text="2019年12月12日12点12分"
                    android:layout_marginStart="40dp"
                    android:gravity="center"
                    android:id="@+id/timedate"
                    android:layout_marginTop="10dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content" android:textColor="#000000"/>
        </LinearLayout>



    </LinearLayout>
</ScrollView>